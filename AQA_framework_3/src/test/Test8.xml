        <parameter name="v1" value="10" />
        <parameter name="v2" value="20" />
        <parameter name="expectedResult" value="Variable 'v2' is greater than 'v1'" />
        <classes>
            <class name="task_8.Task8Test">
                <methods>
                    <include name="testCompare" />
                </methods>
            </class>
        </classes>
