        <parameter name="num" value="4" />
        <parameter name="expectedResult" value="Even" />
        <classes>
            <class name="task_8.Task8Test">
                <methods>
                    <include name="testIsEven" />
                </methods>
            </class>
        </classes>
    </test>
</suite>